# regex approach
# see https://stackoverflow.com/questions/229551/how-to-check-if-a-string-contains-a-substring-in-bash
if [[ $HOSTNAME =~ longreads ]]; then
    # Give me a readout summary on storage space consumed.
    echo
    df -h /storageGC3F/ /JBOD /JBOD3
    echo

    # It's about time.
    export PATH="$PATH:~/G/automation/local"
fi
