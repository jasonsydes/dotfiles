# Ghostty Config

# ── Shell Integration ─────────────────────────────────────────────
# ssh-terminfo: auto-installs xterm-ghostty terminfo on remotes via SSH
# ssh-env: sends TERM_PROGRAM, COLORTERM, etc. to remote hosts
#   Note: most remote sshd_config won't AcceptEnv these vars, so they
#   get dropped on arrival. The real workaround is tmux's update-environment
#   (see terminal/tmux/tmux.conf) which refreshes them on reattach.
shell-integration-features = ssh-terminfo,ssh-env

# Keybindings

# Prompt navigation (jump between shell prompts):
#   Outside tmux: Cmd+Shift+Up/Down (Ghostty native jump_to_prompt)
#   Inside tmux:  Ctrl+Shift+Up/Down (passes through to tmux, see tmux config)
# Ghostty intercepts keybinds before they reach tmux, so we use Cmd for
# the native feature and leave Ctrl+Shift unbound so it passes through.
# See also: terminal/tmux/tmux.conf "Prompt Navigation" section.
keybind = super+shift+up=jump_to_prompt:-1
keybind = super+shift+down=jump_to_prompt:1

# Make shift+enter work through tmux (needed for Claude Code)
keybind = shift+enter=text:\x1b\r

# ── Theme ─────────────────────────────────────────────────────────
theme = GitHub Dark High Contrast
minimum-contrast = 1

# ── Font ──────────────────────────────────────────────────────────
font-family = Inconsolata Nerd Font
font-size = 15
adjust-cell-width = -10%
font-style-bold = bold
font-style-italic = italic

# ── Window ────────────────────────────────────────────────────────
# window-width = 80
# window-height = 25
# window-decoration = true  # false = borderless/chromeless window

# ── Cursor ────────────────────────────────────────────────────────
cursor-style = block
cursor-style-blink = false

# ── Scrollback ────────────────────────────────────────────────────
# Large scrollback buffer (default is 10000)
scrollback-limit = 100000


# ── Mouse ─────────────────────────────────────────────────────────
mouse-hide-while-typing = true

# ── Clipboard / Paste Safety ──────────────────────────────────────
# Ghostty's paste-protection dialog warns before pasting text with
# newlines. Disabled — burdensome in practice, and bracketed paste
# mode (below + inputrc) already prevents accidental execution.
clipboard-paste-protection = false

# Bracketed paste: Ghostty wraps pasted text in \e[200~ ... \e[201~
# escape sequences. tmux passes them through, readline (inputrc)
# interprets them and holds pasted text for review instead of
# executing immediately. See also inputrc `enable-bracketed-paste`.
clipboard-paste-bracketed-safe = true

# ── Option Key (macOS) ────────────────────────────────────────────
# Alt+arrow word-jumping works without this — Ghostty appears to
# handle Option as Meta by default. Uncomment if Alt stops working.
# macos-option-as-alt = true
